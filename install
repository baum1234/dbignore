#!/bin/sh -x
BUILD_DIR=`dirname $0`
cp $BUILD_DIR/dropbox_inj.dylib /Applications/Dropbox.app/Contents
cd /Applications/Dropbox.app/Contents

if ! grep -q "DYLD_INSERT_LIBRARIES" /Applications/Dropbox.app/Contents/Info.plist
then
  cp Info.plist Info.plist.bak
fi

plutil -replace 'PythonInfoDict.py2app.LSEnvironment' -json '{"DYLD_INSERT_LIBRARIES": "/Applications/Dropbox.app/Contents/dropbox_inj.dylib"}' Info.plist
